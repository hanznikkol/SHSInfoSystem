<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green_primary"
    >

    <LinearLayout
        android:id="@+id/linear_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/bg_white_left"
        android:gravity="center_vertical"
        android:elevation="100dp"
        >

        <TextView
            android:fontFamily="@font/montserrat_semi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_login"
        android:gravity="center_vertical"
        android:orientation="vertical"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/monserrat_regular"
            android:text="Account No."
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edAccountNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:alpha="1"
            android:elevation="5dp"
            android:background="@drawable/bg_light_radius"
            android:fontFamily="@font/monserrat_regular"
            android:textColor="@color/white"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/monserrat_regular"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:alpha="1"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_light_radius"
            android:fontFamily="@font/monserrat_regular"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserrat_regular"
                android:text="New Student?"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_semi"
                android:text="Register"
                android:textColor="@color/light_yellow"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/light_yellow"
            android:fontFamily="@font/montserrat_semi"
            android:padding="20dp"
            android:text="Login"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>